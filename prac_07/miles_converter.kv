BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '1'
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: 'Up'
                on_press: app.add_one_value(float(input_miles.text))
            Button:
                id: down_button
                text: 'Down'
                on_press: app.subtract_one_value(float(input_miles.text))
    Button:
        text: 'Convert m to km'
        on_press: app.convert_miles(float(input_miles.text))
    Label:
        id: output_label
        text: ''
        color: (1, 0, 0, 1)
