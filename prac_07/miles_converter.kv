BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '1'
            on_text: app.convert_miles(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: 'Up'
                on_press: app.increment_miles(1)
            Button:
                id: down_button
                text: 'Down'
                on_press: app.increment_miles(-1)
    #Button:
    #    text: 'Convert miles to kilometres'
    #    on_press: app.convert_miles(input_miles.text)
    Label:
        id: output_label
        text: ''
        color: (16, 1, 0, 1)
